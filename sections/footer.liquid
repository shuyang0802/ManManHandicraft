<style>
  :root{--g-footer-mid-bg:{{section.settings.footermidbg}};--g-footer-mid-text:{{section.settings.footermidtext}};--g-footer-mid-link:{{section.settings.footermidlink}};}
</style>
<style>
  .footer-mid {
	background: var(--g-footer-mid-bg);
	color: var(--g-footer-mid-text)
}

.footer-mid a {
	color: var(--g-footer-mid-link)
}

.footer-mid a:hover {
	opacity: .85
}

.footer-bot {
	background: var(--g-footer-mid-bg);
	padding-top: 40px;
	padding-bottom: 65px
}

.footer-mid__contact-form input {
	width: 100%;
	margin-bottom: 10px;
	font-size: 14px;
	background: var(--g-footer-mid-text);
	border: 1px solid #ccc
}

.footer-mid__contact-form textarea {
	width: 100%;
	height: 86px;
	font-size: 14px;
	background: var(--g-footer-mid-text);
	border: 1px solid #ccc
}

.footer-mid__contact-form .form-success {
	margin-top: 10px
}

.footer-mid__contact-form .btn {
	padding: 15px 0;
	margin-top: 5px;
	width: 100%;
	text-transform: uppercase;
	font-size: 12px
}

.footer-container {
	margin: 0 auto
}

.rtl .footer-container {
	text-align: right
}

.footer-mid__title {
	font-size: 30px;
	text-transform: none;
	margin-bottom: 35px;
	margin-top: 0;
	border-bottom: 1px solid rgba(255, 255, 255, .2);
	padding: 35px 0;
	position: relative
}

.rtl .footer-mid__title {
	padding-left: 0;
	padding-right: 20px
}

.footer-mid__des {
	font-size: 18px;
	line-height: 1.8
}

.footer-mid__info li {
	padding: 5px 0;
	border-bottom: 1px solid rgba(255, 255, 255, .2);
	line-height: 33px
}

.footer-mid__info li:last-child {
	border: none
}

.footer-mid__info .icon {
	width: 15px;
	margin-right: 10px
}

.rtl .footer-mid__info .icon {
	margin-left: 10px;
	margin-right: 0
}

.footer-mid__social li {
	width: 40px;
	height: 40px;
	line-height: 40px;
	border-radius: 50%;
	margin: 8px
}

.footer-mid__contact-form .btn .icon {
	margin: 0 4px
}

.footer-mid__linklist li+li {
	position: relative
}

.footer-mid__linklist li+li:before {
	content: "";
	position: absolute;
	width: 1px;
	height: 50%;
	top: 25%;
	left: 0;
  background:var(--g-footer-mid-text);
  opacity: 0.1;
}

.footer-top .footer__newsletter {
  background:#222;
  padding:30px 0;
  display: -webkit-box;
  display: -moz-box;
  display: box;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -moz-box-align: center;
  box-align: center;
  -webkit-align-items: center;
  -moz-align-items: center;
  -ms-align-items: center;
  -o-align-items: center;
  align-items: center;
  -ms-flex-align: center;
  -webkit-box-pack: center;
  -moz-box-pack: center;
  box-pack: center;
  -webkit-justify-content: center;
  -moz-justify-content: center;
  -ms-justify-content: center;
  -o-justify-content: center;
  justify-content: center;
  -ms-flex-pack: center;
}
  .footer-top .footer__newsletter .footer__newsletter_title h2{
    color:#fff;
    font-size: 36px;
    text-transform: none;
    line-height: 40px;
    padding-bottom: 0;
  }
  .footer-top .footer__newsletter .footer__newsletter_title p{
    color:#fff;
    font-size: 18px;
    font-weight: 300;
    margin: 0;
    padding-left: 35px;
  }
  .footer-top .footer__newsletter .footer__newsletter_title{
  	padding-right:170px;
    text-align:left;
  }
  .footer-top .footer__newsletter .footer__newsletter_title svg{
  	position: relative;
    top: -4px;
    margin-right: 5px;
  }
  .footer-top .form-vertical{
  	min-width: 470px;
  }
  .footer-top .form-vertical .form-control{
    border: 1px solid #fff;
    padding: 0 15px;
    color:#fff;
  }
  .footer-top .form-vertical button{
    padding: 10px 36px;
    -webkit-transition: all 0.3s ease 0s;
    -moz-transition: all 0.3s ease 0s;
    -ms-transition: all 0.3s ease 0s;
    -o-transition: all 0.3s ease 0s;
    transition: all 0.3s ease 0s;
    color:#222;
    background:#fff;
  }
  .footer-top .form-vertical button:hover{
  	background: var(--g-main);
      color:#fff;
  }
  .footer-top .form-vertical .input-group{
  	margin:0;
  }
  section.footer-mid {
    padding: 25px 0 15px;
}
  @media(max-width:1199px){
    .footer-top .footer__newsletter{
      display: block;
      padding: 30px 15px;
      text-align: center;
      
    }
    .footer-top .footer__newsletter .footer__newsletter_title{
      padding: 0;
      text-align: center;
      margin-bottom: 15px;
    }
  }
  @media(max-width:767px){
    .footer-top .form-vertical{
    	min-width:100%;
    }
    .footer-top .form-vertical .input-group{display:inline-block;}
    .footer-top .form-vertical .form-control{width:100%;}
    .footer-top .form-vertical .input-group-append{
      width: 100%;
      display: block;
      margin: 0;
    }
    .footer-top .form-vertical .input-group-append button{
    	width:100%;
    }
  }
</style>

