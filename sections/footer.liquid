<style>
  ul {
    margin: 0;
    padding: 0;
  }

  .footer-section {
    background-color: {{ section.settings.footer-bgcolor }};
    position: relative;
  }
  .footer-cta {
    border-bottom: 1px solid #fff;
  }

  .single-cta i {
    color: {{ section.settings.footer-cta-color }};
    font-size: 30px;
    float: left;
    margin-top: 8px;
  }

  .cta-text {
    padding-left: 15px;
    display: inline-block;
  }

  .heading-color {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 2px;
    color: {{ section.settings.heading-color }};
  }
  .text-color {
    font-size: 15px;
    color: {{ section.settings.text-color }};
  }
  .footer-content {
    position: relative;
    z-index: 2;
  }

  .footer-pattern img {
    position: absolute;
    top: 0;
    left: 0;
    height: 330px;
    background-size: cover;
    background-position: 100% 100%;
  }

  .footer-logo {
    margin-bottom: 30px;
  }

  .footer-logo img {
    border-radius: 50%;
    max-width: 200px;
  }

  .footer-text p {
    margin-bottom: 14px;
    font-size: 14px;
    color: #fff;
    line-height: 28px;
  }

  .footer-social-icon span {
    color: #fff;
    display: block;
    font-size: 20px;
    font-weight: 700;
    font-family: 'Poppins'
    , sans-serif;
    margin-bottom: 20px;
  }

  .footer-social-icon a {
    color: #fff;
    font-size: 16px;
    margin-right: 15px;
  }

  .footer-social-icon i {
    height: 40px;
    width: 40px;
    text-align: center;
    line-height: 38px;
    border-radius: 50%;
  }

  .footer-widget-heading h3 {
    color: #fff;
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 40px;
    position: relative;
  }

  .footer-widget-heading h3::before {
    content: "";
    position: absolute;
    left: 0;
    bottom: -15px;
    height: 2px;
    width: 50px;
    background: #EB6D9C;
  }

  .footer-widget ul li {
    display: inline-block;
    float: left;
    width: 50%;
    margin-bottom: 12px;
  }

  .footer-widget ul li a:hover {
    color: #EB6D9C;
    text-decoration: none;
  }

  .footer-widget ul li a {
    color: #fff;
    text-transform: capitalize;
  }

  .subscribe-form {
    position: relative;
    overflow: hidden;
  }

  .subscribe-form input {
    width: 100%;
    padding: 14px 28px;
    background: #fff;
    border: 1px solid #fff;
    color: #222;
  }

  .subscribe-form button {
    position: absolute;
    right: 0;
    background: #EB6D9C;
    padding: 13px 20px;
    border: 1px solid #EB6D9C;
    top: 0;
  }

  .subscribe-form button i {
    color: #fff;
    font-size: 22px;
    transform: rotate(-6deg);
  }
  .copyright-area {
    background-color: {{ section.settings.copyright-bgcolor }};
    padding: 25px 0;
  }
  .copyright-text p {
    color: {{ section.settings.copyright-text-color }};
    margin: 0;
    font-size: 14px;
  }
  @media screen and (max-width: 768px) {
    .footer-cta{
      padding: 10px 0 0 0 !important;
    }
    .single-cta {
      padding-bottom: 10px;
      padding-left: 25px;
    }
    .footer-logo{
      display: block;
      margin: 0 auto;
    }
    .footer-social-icon{
      padding: 10px 0px;
    }
    .footer-social-icon span{
      text-align: center;
    }
    .footer-social-icon-list{
      text-align: center;
    }
    .footer-widget{
      text-align: center;
    }
    .footer-widget-heading h3{
      margin-bottom: 20px;
    }
    .footer-widget-heading h3::before{
      left: 50%;
      transform: translateX(-50%);
    }
    .footer-widget ul li {
      width: 100%;
    }
  }
</style>

<footer class="footer-section">
  <div class="container footer-top">
    <div class="footer-cta pt-5 pb-5">
      <div class="row">
        {% for block in section.blocks %}
          <div class="col-xl-4 col-md-4 mb-30">
            <div class="single-cta">
              <i class="{{ block.settings.icon }}"></i>
              <div class="cta-text">
                <h4 class="heading-color">{{ block.settings.heading }}</h4>
                <span class="text-color">{{ block.settings.text }}</span>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="footer-content pt-5 pb-5">
      <div class="row">
        <div class="col-xl-4 col-lg-4 mb-50">
          <div class="footer-widget">
            <div class="footer-logo">
              <a href="/">
                <img
                  src="{{ section.settings.footer_logo | image_url }}"
                  width="100"
                  height="100"
                  class="footer-logo"
                  alt="logo"
                >
              </a>
            </div>
            <div class="footer-social-icon">
              <span>Follow us</span>
              <div class="footer-social-icon-list">
                <a target="_blank" href="https://www.tiktok.com/@manman_handicraft?is_from_webapp=1&sender_device=pc">
                  <img
                    src="{{ section.settings.tiktok_icon |  image_url }}"
                    alt="tiktok"
                    width="24"
                    height="24"
                  >
                </a>
                <a
                  target="_blank"
                  href="https://www.xiaohongshu.com/user/profile/5c4fe84700000000110306b7?xhsshare=CopyLink&appuid=5c6c4468000000001001f9ac&apptime=1733621441&share_id=bc8701f416544723b14f3850af83a41b"
                >
                  <img
                    src="{{ section.settings.xiaohongshu_icon |  image_url }}"
                    alt="xiaohongshu"
                    width="24"
                    height="24"
                  >
                </a>
                <a
                  href="https://www.instagram.com/manman_handcraft?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw=="
                  target="_blank"
                >
                  <img
                    src="{{ section.settings.instagram_icon |  image_url }}"
                    alt="instagram"
                    width="24"
                    height="24"
                  >
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-6 mb-30">
          <div class="footer-widget">
            <div class="footer-widget-heading">
              <h3>Useful Links</h3>
            </div>
            <ul>
              {% for link in linklists[section.settings.footer_menu].links %}
                <li>
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-6 mb-50">
          <div class="footer-widget">
            <div class="footer-widget-heading">
              <h3>Subscribe</h3>
            </div>
            <div class="footer-text mb-25">
              <p>Donâ€™t miss to subscribe to our new feeds, kindly fill the form below.</p>
            </div>
            <div class="subscribe-form">
              <form action="#">
                <input type="text" placeholder="Email Address">
                <button>
                  <i class="fab fa-telegram-plane"></i>
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="copyright-area">
    <div class="container">
      <div class="copyright-text text-center">
        <p>
          &copy; Copyright {{ 'now' | date: '%Y' }}
          <b>{{ shop.name }}</b>
        </p>
      </div>
    </div>
  </div>
</footer>

