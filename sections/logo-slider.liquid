<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-250px * 7));
    }
  }

  .slider {
    height: 100px;
    margin: auto;
    overflow: hidden;
    position: relative;
    width: auto;
  }

  .slider .slide-track {
    animation: scroll 10s linear infinite;
    display: flex;
    width: calc(250px * 14);
  }

  .slider .slide {
    height: 300px;
    width: 400px;
  }
</style>

<div class="slider">
  <div class="slide-track">
    {% for block in section.blocks %}
      <div class="slide">
        <div>
          <i class="{{ block.settings.icon }}"></i>
          <h3>{{ block.settings.logotitle }}</h3>
          <p>{{ block.settings.logotext }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

{% schema %}
  {
    "name": "Logo Slider",
    "settings": [],
    "blocks": [
      {
        "type": "Logo",
        "name": "Slide",
        "settings": [
            {
            "type": "text",
            "id": "icon",
            "label": "icon",
            "default": "home"
            },
            {
            "type": "text",
            "id": "logotitle",
            "label": "logotitle",
            "default": "Logo Slider"
            },
            {
            "type": "text",
            "id": "logotext",
            "label": "logotext",
            "default": "Logo Slider"
            },
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo Slider",
        "category": "Logos",
        "blocks": [
          {
            "type": "Logo"
          }
        ]
      }
    ]
  }
{% endschema %}