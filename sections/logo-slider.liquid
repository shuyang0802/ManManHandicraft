<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-400px * 7));
    }
  }

  .slider {
    height: 200px;
    margin: auto;
    overflow: hidden;
    position: relative;
    width: auto;
  }

  .slider .slide-track {
    animation: scroll 30s linear infinite;
    display: flex;
    width: calc(400px * 14);
    height: 200px;
  }

  .slider .slide {
    height: 200px;
    width: 400px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .slider .slide i {
    font-size: 2em;
    margin-bottom: 10px;
  }
  .slide-content {
    justify-content: center;
    align-items: center;
    display: block;
    margin: auto 0;
  }
</style>

<div class="slider {{section.settings.slider_style}}">
  <div class="slide-track">
    {% for block in section.blocks %}
      <div class="slide">
        <div class="slide-content">
          <i class="fas fa-{{ block.settings.icon }}"></i>
          <h3>{{ block.settings.logotitle }}</h3>
          <p>{{ block.settings.logotext }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Logo Slider",
    "settings": [
      {
        "type": "color_background",
        "id": "slider_style",
        "label": "Color",
        "default": "#000"
      }
    ],
    "blocks": [
      {
        "type": "Logo",
        "name": "Slide",
        "settings": [
          {
            "type": "text",
            "id": "icon",
            "label": "Icon",
            "default": "home"
          }, {
            "type": "text",
            "id": "logotitle",
            "label": "Logo Title",
            "default": "Logo Slider"
          }, {
            "type": "text",
            "id": "logotext",
            "label": "Logo Text",
            "default": "Logo Slider"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo Slider",
        "category": "Logos",
        "blocks": [
          {
            "type": "Logo"
          }
        ]
      }
    ]
  }
{% endschema %}