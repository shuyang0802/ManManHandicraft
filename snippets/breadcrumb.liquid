{% unless template == 'index' or template == 'cart' or template == 'list-collections' %}
  <style>
    .g-breadcrumb {
      flex-direction: column;
      color: {{ settings.color_breadcrumbs }};
      padding: 40px 0;
      margin: 0;
      background: {{ settings.bg_breadcrumb }};
    }
    .g-breadcrumb a,
    .g-breadcrumb span {
      padding: 0 3px;
      font-size: 15px;
      line-height: 20px;
      display: inline-block;
    }
    .g-breadcrumb a {
      color: {{ settings.color_breadcrumbs_active }};
    }
    .g-breadcrumb .container,
    .g-breadcrumb .container-fluid {
      z-index: 2;
      position: relative;
    }
    .g-breadcrumb.breadcrumbs-style_2 {
      padding: 120px 0;
      background: center;
      background-repeat: no-repeat;
      background-size: cover;
      position: relative;
    }
    @media (max-width: 576px) {
      .g-breadcrumb.breadcrumbs-style_2 {
        padding: 50px 0;
      }
      .g-breadcrumb.breadcrumbs-style_2 h3 {
        font-size: 26px;
      }
    }
    .g-breadcrumb.breadcrumbs-style_2::before {
      background: rgba(0, 0, 0, {{settings.limit_ranger}});
      position: absolute;
      z-index: 1;
      content: "";
      left: 0;
      right: 0;
      bottom: 0;
      top: 0;
    }
    .br-title {
      color: {{ settings.color_breadcrumbs }}
    }
    .br-title svg {
      width: 23px;
      height: 23px;
    }
    .container-fluid {
      padding: 0;
      --bs-gutter-x: 0;
    }
    @media (max-width: 767px) {
      h3 {
        text-align: center !important;
      }
      .container {
        text-align: center;
      }
    }
  </style>
  {% assign bgimage = settings.img_breadcrumb %}
  {% comment %}
    {% if template contains 'collection' and collection.handle %}
    {% assign bgimage = collection.image.src %}
    {% if collection.image.src == blank %}
    {% assign bgimage = settings.img_breadcrumb %}
    {% endif %}
    {% elsif template contains 'product' and collection.handle %}
    {% assign bgimage = collection.image.src %}
    {% endif %}
  {% endcomment %}
  <div class="{{settings.layout_bread}}">
    <nav
      class="breadcrumbs-{{settings.style_breadcrumb}} breadcrumb g-breadcrumb lazyload text-{{settings.align_bread}}"
      role="navigation"
      aria-label="breadcrumbs"
      {% unless settings.style_breadcrumb == 'style_1' %}
      data-bgset="{%- render 'bgset', image: bgimage -%}"
      data-sizes="auto"
      data-parent-fit="cover"
      {% endunless %}>
      <div class="{{settings.layout_bread}} container">
        {% if settings.show_title_breadcumbs %}
          {% if template contains 'collection' and collection.handle %}
            <h3 class="font-family-2 mb-2 h1 br-title">{{ collection.title }}</h3>
          {% elsif template contains 'page' %}
            <h3 class="mb-2 h1 br-title font-family-2">{{ page.title }}</h3>
          {% elsif template contains 'product' and collection.handle %}
            <h3 class="mb-2 h1 br-title font-family-2">{{ page.title }}</h3>
          {% elsif template contains 'blog' %}
            <h3 class="mb-2 h1 br-title font-family-2">
              {{ blog.title }}
              {%- include 'icon-rss' -%}
            </h3>
          {% endif %}
        {% endif %}
      </div>
      <div class="{{settings.layout_bread}} container">
        <a href="/" title="Home">Home</a>
        {% if template contains 'page' %}
          <span>/</span>
          <span>{{ page.title }}</span>
        {% elsif template contains 'product' %}
          {% if collection.url %}
            <span>/</span>
            {{ collection.title | link_to: collection.url }}
          {% endif %}
          <span>/</span>
          <span>{{ product.title }}</span>
        {% elsif template contains 'collection' and collection.handle %}
          <span>/</span>
          {% if current_tags %}
            {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
            {{ collection.title | link_to: url }}
            <span>/</span>
            <span>{{ current_tags | join: ' + ' }}</span>
          {% else %}
            <span>{{ collection.title }}</span>
          {% endif %}
        {% elsif template == 'blog' %}
          <span>/</span>
          {% if current_tags %}
            {{ blog.title | link_to: blog.url }}
            <span>/</span>
            <span>{{ current_tags | join: ' + ' }}</span>
          {% else %}
            <span>{{ blog.title }}</span>
          {% endif %}
        {% elsif template == 'article' %}
          <span>/</span>
          {{ blog.title | link_to: blog.url }}
          <span>/</span>
          <span>{{ article.title }}</span>
        {% else %}
          <span>/</span>
          <span>{{ page_title }}</span>
        {% endif %}
      </div>
    </nav>
  </div>
{% endunless %}